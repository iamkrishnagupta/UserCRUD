<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>View Users</title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body>
    <div class="w-full h-full bg-zinc-900 p-10 text-white">
      <div class="nav mb-10">
        <a class="text-zinc-500" href="/">Back to Home?</a>
      </div>
      <h1 text="3xl tracking-tighter mb-4">All Users</h1>
      <div class="users flex gap-3 flex-wrap">
        <% users.forEach(function(user){ %>
        <div class="user w-72 p-4 bg-zinc-800 rounded-lg">
          <div
            class="w-full h-72 rounded-lg bg-zinc-700 overflow-hidden object-top"
          >
            <img
              class="w-full h-full object-cover"
              src="<%= user.image%>"
              alt="User Image"
            />
          </div>
          <h3 class="text-xl mt-3 tracking-tighter"><%= user.name%></h3>
          <h5 class="text-zinc-500"><%= user.email%></h5>
          <div class="flex gap-3 mt-10">
            <a href="/edit/<%=user._id %>" class="text-zinc-200">Edit User</a>
            <a href="/delete/<%= user._id %>" class="text-red-500"
              >Delete User</a
            >
          </div>
        </div>

        <% }) %>
      </div>
    </div>
  </body>
</html>
